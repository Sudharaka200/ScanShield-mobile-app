<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.scanshield_mobile_app">

    <!-- Permissions -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScanShieldmobileapp"
        tools:targetApi="31">

        <!-- Activities -->
        <activity android:name=".Home" android:exported="false" />
        <activity android:name=".SettingsActivity" android:exported="false" />
        <activity android:name=".profile" android:exported="false" />
        <activity android:name=".SignUp" android:exported="false" />
        <activity android:name=".message_history" android:exported="false" />
        <activity android:name=".normal_calls" android:exported="false" />
        <activity android:name=".call_answered_screen" android:exported="false" />
        <activity android:name=".number_search" android:exported="false" />
        <activity android:name=".protection" android:exported="false" />
        <activity android:name=".login_successfully" android:exported="false" />
        <activity android:name=".LoginActivity" android:exported="true" />
        <activity android:name=".dialpad" android:exported="false" />
        <activity android:name=".spam_messages" android:exported="false" />
        <activity android:name=".blocked_numbers" android:exported="false" />
        <activity android:name=".CallHistoryActivity" android:exported="false" />
        <activity android:name=".spam_calls" android:exported="false" />
        <activity android:name=".GetStarted3" android:exported="false" />
        <activity android:name=".GetStarted2" android:exported="false" />
        <activity android:name=".GetStarted1" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".IncomingCall"
            android:theme="@android:style/Theme.DeviceDefault.Dialog.NoActionBar" />


        <!-- Launcher Activity -->
        <activity android:name=".Loading2" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Broadcast Receiver -->
        <receiver android:name=".Reciver" android:exported="true">
            <intent-filter>
                <action android:name="com.example.Broacast" />
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
