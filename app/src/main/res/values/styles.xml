<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="CallButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/circle_call_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0066FF</item>
    </style>

    <style name="Theme.ScanShieldmobileapp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your app theme here -->
    </style>

    <style name="AppTheme.Popup" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>